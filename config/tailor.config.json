{
    "base": {
        "input": {
            "path": "src",
            "entry": {
                "prefix": "index",
                "ext": "js"
            },
            "js": {
                "ext": ["js"]
            },
            "style": {
                "ext": ["css", "less"]
            },
            "html": {
                "ext": ["html"]
            },
            "image": {
                "ext": ["jpg", "jpeg", "png", "gif", "ico", "bmp"]
            },
            "file": {
                "ext": ["svg", "eof", "woff", "woff2", "eot", "ttf"]
            }
        },
        "output": {
            "useHash": false,
            "path": "dist",
            "publicPath": "//cdn.tff.com",
            "global": {
                "$": "jquery",
                "jQuery": "jquery",
                "Vue": "vue",
                "lodash": "lodash",
                "riot": "riot",
                "_": "lodash"
            },
            "js": {
                "path": "assets"
            },
            "html": {
                "path": "views",
                "ext": "blade.php"
            },
            "style": {
                "path": "assets",
                "extract": true
            },
            "image": {
                "path": "assets"
            },
            "file": {
                "path": "assets"
            }
        },
        "vars": {
            "CDN": ""
        },
        "resolve": {
            "alias": {
                "common": "@/common",
                "lib": "common/lib",
                "vendor": "common/vendor",
                "ui": "lib/ui",
                "jquery": "vendor/jquery/jquery.min.js",
                "vue": "vendor/vue/vue.min.js",
                "lodash": "vendor/util/lodash.core.js",
                "riot": "vendor/riot/riot.min.js"
            },
            "modules": [],
            "extensions": []
        },
        "resolveLoader": {
            "modules": [],
            "extensions": []
        },
        "modules": {},
        "server": {
            "port": 8080,
            "host": "localhost"
        }
    },
    "dev": {
        "output": {
            "path": "dest",
            "style": {
                "extract": false
            }
        }
    },
    "test": {
        "output": {}
    },
    "prod": {
        "output": {
            "useHash": true
        }
    },
    "dll": {

    }
}
