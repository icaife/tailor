{
    "input": {
        "path": "src",
        "entry": {
            "prefix": "index",
            "ext": "js"
        },
        "js": {
            "ext": ["js"]
        },
        "style": {
            "ext": ["css", "less"]
        },
        "html": {
            "ext": ["html"]
        },
        "image": {
            "ext": ["jpg", "jpeg", "png", "gif", "ico", "bmp"]
        },
        "file": {
            "ext": ["svg", "eof", "woff", "woff2", "eot", "ttf"]
        }
    },
    "output": {
        "useHash": false,
        "path": "dist",
        "publicPath": "//cdn.tff.com",
        "js": {
            "path": "assets"
        },
        "html": {
            "path": "views",
            "ext": "blade.php"
        },
        "style": {
            "path": "assets",
            "extract": true
        },
        "image": {
            "path": "assets"
        },
        "file": {
            "path": "assets"
        }
    },
    "resolve": {
        "alias": {
            "common": "@/common",
            "lib": "common/lib",
            "vendor": "common/vendor",
            "ui": "lib/ui",
            "jquery": "vendor/jquery/jquery.min.js",
            "vue": "vendor/vue/vue.min.js",
            "lodash": "vendor/util/lodash.core.js",
            "riot": "vendor/riot/riot.min.js"
        },
        "modules": [],
        "extensions": []
    },
    "resolveLoader": {
        "modules": [],
        "extensions": []
    },
    "vars": {
        "CDN": ""
    },
    "global": {
        "$": "jquery",
        "jQuery": "jquery",
        "Vue": "vue",
        "lodash": "lodash",
        "riot": "riot",
        "_": "lodash"
    },
    "server": {
        "port": 8080,
        "host": "localhost",
        "devServer": {
            "noInfo": false,
            "quiet": false,
            "clientLogLevel": "info",
            "disableHostCheck": true,
            "compress": true,
            "hot": true,
            "hotOnly": true,
            "lazy": false,
            "watchOptions": {
                "ignored": ["node_modules"],
                "aggregateTimeout": 300,
                "poll": true
            },
            "overlay": {
                "warnings": false,
                "error": true
            },
            "headers": {
                "Access-Control-Allow-Origin": "*",
                "Access-Control-Allow-Credentials": true,
                "Access-Control-Allow-Headers": "*",
                "Access-Control-Allow-Methods": "*",
                "Accept": "*/*"
            },
            "stats": {
                "children": false,
                "publicPath": true,
                "errors": true,
                "colors": true,
                "chunks": false,
                "chunkModules": false
            }
        }
    }
}