{
    "watch": false,
    "devtool": false,
    "input": {
        "path": "src",
        "entry": {
            "prefix": "index",
            "ext": "js"
        },
        "js": {
            "ext": ["js"]
        },
        "style": {
            "ext": ["css", "less"]
        },
        "html": {
            "ext": ["html"]
        },
        "image": {
            "ext": ["jpg", "jpeg", "png", "gif", "ico", "bmp"]
        },
        "file": {
            "ext": ["svg", "eof", "woff", "woff2", "eot", "ttf"]
        }
    },
    "output": {
        "useHash": false,
        "path": "dist",
        "publicPath": "//cdn.tff.com",
        "global": {},
        "js": {
            "path": "assets"
        },
        "html": {
            "path": "views",
            "ext": "blade.php"
        },
        "style": {
            "path": "assets",
            "extract": true
        },
        "image": {
            "path": "assets"
        },
        "file": {
            "path": "assets"
        }
    },
    "vars": {
        "CDN": ""
    },
    "resolve": {
        "alias": {},
        "modules": [],
        "extensions": []
    },
    "resolveLoader": {
        "modules": [],
        "extensions": []
    },
    "modules": {},
    "server": {
        "port": 8080,
        "host": "localhost"
    }
}